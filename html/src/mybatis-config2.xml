<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd"> 
<configuration>
<properties resource="db2.properties"></properties>
<settings>
<setting name="mapUnderscoreToCamelCase" value="true"></setting>
</settings>
<typeAliases>
<typeAlias type="mybatis.board.model.BoardRec" alias ="BoardRec"/>
</typeAliases>
<environments default="development">
<environment id="development">
<transactionManager type="JDBC"/><!-- jdbc/manager  auto commit이 아님 -->
<dataSource type="POOLED"><!-- 커넥션 풀을 할까 pooled 빠름>unpooled  -->
<property name="driver" value="${driver}"/>
<property name="url" value="${url}"/>
<property name="username" value="${username}"/>
<property name="password" value="${password}"/>
</dataSource>
</environment>
</environments>
<mappers>
<mapper resource="mybatis/board/mapper/BoardMapper.xml"/>
</mappers>
</configuration> 